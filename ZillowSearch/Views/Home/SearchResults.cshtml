@model ZillowSearch.Models.Searchresults

@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ string messageCode = @Model.Message.Code; }

    @if (messageCode != "0")
    {
        <div class="col-md-12">
            <h4> Search Results </h4>
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> @Model.Response.Results.Result.Address 
            
            <button type="button" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            </button>
        </div>
    }
    else
    {
        <div class="col-md-12">
            <h2> Error! </h2>
            <p>An Error has occurred. Error Code: @Model.Message.Code  <br />
               @Model.Message.errorSolution(@Model.Message.Code)
            </p>
        </div>
    }

